        <activity android:name=".activities.FullScreenImageActivity" />
        <activity android:name=".activities.StudyMaterialActivity" />
        <activity
            android:name=".activities.ProfileActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".activities.LibraryActivity" />
        <activity android:name=".activities.TeacherActivity" />
        <activity android:name=".activities.VideoLibActivity" />
