<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:orientation="horizontal">

    <in.semicolonindia.schoolcrm.widgets.civ.CircleImageView
        android:id="@+id/civCommentImage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:src="@drawable/dummy_image" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingStart="4dp">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="10dp"
            android:layout_marginStart="-0dp"
            android:background="@drawable/triangle_down_pointed_solid_color_light"
            android:contentDescription="@null"
            android:rotation="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-8dp"
            android:background="@drawable/comment_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCommentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingEnd="4dp"
                android:paddingStart="8dp"
                android:text="@string/comment_title"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCommentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="4dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_access_time_24px"
                android:paddingBottom="6dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:text="@string/dummy_date"
                android:textColor="@color/colorTextSecondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="6dp"
                android:paddingBottom="6dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:text="@string/dummy_text"
                android:textColor="@color/colorTextPrimary" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>